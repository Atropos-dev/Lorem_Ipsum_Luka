{
  "name": "Expanding image",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Expanding Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "img_content",
      "label": "Image content"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "content"
    },
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Expanding image",
      "category": "Custom"
    }
  ]
}
{% endschema %}