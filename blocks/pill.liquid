<div 
 class="pill-icon__text border-style {{ block.settings.visibility }}"
 style="
  --pill-padding-top: {{ block.settings.pill_padding_top }}px;
  --pill-padding-bottom: {{ block.settings.pill_padding_bottom }}px;
  --pill-padding-left: {{ block.settings.pill_padding_left }}px;
  --pill-padding-right: {{ block.settings.pill_padding_right }}px;
  --pill-padding-top--mobile: {{ block.settings.pill_padding_top_mobile }}px;
  --pill-padding-bottom--mobile: {{ block.settings.pill_padding_bottom_mobile }}px;
  --pill-padding-left--mobile: {{ block.settings.pill_padding_left_mobile }}px;
  --pill-padding-right--mobile: {{ block.settings.pill_padding_right_mobile }}px;
  {% render 'border-override', settings: block.settings %}
 "
>
    <div class="pill-icon ">
        {% if block.settings.pill_icon == 'open' %}
            {% render 'icon-open' %}
        {% else %}
            {% render 'icon-close' %}
        {% endif %}
    </div>
    <div class="pill-text">
        {% render 'text', block: block %}
    </div>
</div>

{% stylesheet %}
  .pill-icon__text {
    display: flex;
    align-items: center;
    gap: 18px;
  }

  @media screen and (max-width: 767px) {
    .pill-icon__text {
        gap: 18px;
        padding: var(--pill-padding-top--mobile) var(--pill-padding-left--mobile) var(--pill-padding-bottom--mobile) var(--pill-padding-right--mobile);
    }
  }

  @media screen and (min-width: 768px) {
    .pill-icon__text {
        gap: 12px;
        padding: var(--pill-padding-top) var(--pill-padding-left) var(--pill-padding-bottom) var(--pill-padding-right);
    }
  }
{% endstylesheet %}


