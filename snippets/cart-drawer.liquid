{%- doc -%}
  Renders the cart drawer, a slide-out panel that displays the contents of the cart. It includes the cart icon that acts as a trigger.

  @param {object} [settings] - An object containing theme settings.

  @param {boolean} [settings.auto_open_cart_drawer] - If `true`, the cart drawer opens automatically after an item is
  added.
  @param {string} [settings.drawer_color_scheme] - The color scheme for the drawer.
{%- enddoc -%}

<script
  src="{{ 'cart-drawer.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<cart-drawer-component
  class="cart-drawer"
  {{ block.shopify_attributes }}
  {% if settings.auto_open_cart_drawer %}
    auto-open
  {% endif %}
>
  <button
    class="button header-actions__action button-unstyled"
    on:click="/open"
    aria-label="{{ 'accessibility.open_cart_drawer' | t }} {{ 'accessibility.cart_count' | t}}: {{ cart.item_count }}"
  >
    {% render 'cart-icon-component', block_settings: block.settings %}
  </button>

  <dialog
    ref="dialog"
    class="cart-drawer__dialog dialog-modal dialog-drawer color-{{ settings.drawer_color_scheme }}{% if cart.empty? %} cart-drawer--empty{%endif%}"
    scroll-lock
  >
    <div class="cart-drawer__inner">
      <cart-items-component
        class="cart-items-component"
        data-section-id="{{ section.id }}"
      >
        {%- if cart.empty? -%}
          <div class="cart-drawer__header">
            <button
              ref="closeButton"
              on:click="cart-drawer-component/close"
              class="button close-button cart-drawer__close-button button-unstyled"
              aria-label="{{ 'actions.close_dialog' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>

          <div
            class="cart-drawer__content motion-reduce"
            aria-label="{{ 'accessibility.cart' | t }}"
          >
            <span class="cart-drawer__heading h3 cart-drawer__heading--empty">
              {{ 'content.your_cart_is_empty' | t }}
            </span>

            <div class="cart-drawer__items">
              {% render 'cart-products' %}
            </div>
          </div>
        {%- else -%}
          <div
            class="cart-drawer__header"
            id="cart-drawer-header"
          >
            <span class="cart-drawer__heading h3">
              {{ 'content.cart_title' | t }}
              {% render 'cart-bubble' %}
            </span>

            <button
              ref="closeButton"
              on:click="cart-drawer-component/close"
              class="button close-button cart-drawer__close-button button-unstyled"
              aria-label="{{ 'actions.close_dialog' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>

          {% if settings.show_free_shipping_progress %}
            <div class="cart-drawer__free-shipping-progress">
              {%-liquid 
                assign free_shipping_threshold = settings.free_shipping_threshold | times: 100
                assign add_more = free_shipping_threshold | minus: cart.items_subtotal_price
                assign add_more_money = add_more | money_with_currency
                assign free_shipping_percents = cart.items_subtotal_price | divided_by: settings.free_shipping_threshold
              -%}
              {% if add_more > 0 %}
                <p class="cart-drawer__free-shipping-message">{{ 'content.free_shipping_add_more' | t: amount:add_more_money }}</p>
              {% else %}
                <p class="cart-drawer__free-shipping-message">{{ settings.free_shipping_achieved_message }}</p>
              {% endif %}
              <div class="cart-drawer__free-shipping-progress-bar">
                <div class="progress-fill" style="width: {{ free_shipping_percents }}%;"></div>
              </div>
            </div>
          {% endif %}

          <div
            class="cart-drawer__content motion-reduce"
            aria-label="{{ 'accessibility.cart' | t }}"
            style="--header-height: 60px;"
          >
            <scroll-hint
              class="cart-drawer__items"
            >
              {% render 'cart-products' %}

              {% if settings.show_cart_upsell and settings.cart_upsell_collection != blank %}
                {% render 'cart-upsell' %}
              {% endif %}
            </scroll-hint>

            <div
              class="cart-drawer__summary"
            >
              {% render 'cart-summary' %}
            </div>
          </div>
        {%- endif -%}
      </cart-items-component>
    </div>
  </dialog>
</cart-drawer-component>

<style>
  .cart-items-component {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .cart-drawer__heading .cart-bubble {
    width: fit-content;
    border-radius: var(--style-border-radius-buttons-primary);
    aspect-ratio: auto;
    padding: var(--cart-padding);
  }

  .cart-drawer__heading .cart-bubble[data-maintain-ratio] {
    aspect-ratio: 1;
    min-width: 26px;
  }

  .cart-drawer__header {
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--cart-drawer-padding);
    border-bottom: var(--style-border-width) solid none;
    position: sticky;
    top: 0;
    z-index: 1;

    @media screen and (min-width: 750px) {
      padding: var(--cart-drawer-padding-desktop);
    }
  }

  .cart-drawer__dialog {
    overflow: hidden;
  }

  .cart-drawer__inner {
    height: 100%;
    overflow: hidden;
  }

  .cart-drawer__content {
    height: calc(100% - var(--header-height));
    display: flex;
    flex-direction: column;
  }

  .cart-drawer__summary {
    background-color: var(--color-background);
    position: sticky;
    bottom: 0;
    z-index: 1;
  }

  .cart-drawer__free-shipping-progress {
    padding: var(--cart-drawer-padding);
    padding-top: 0px;
    padding-bottom: 25px;

    @media screen and (min-width: 750px) {
      padding: var(--cart-drawer-padding-desktop);
      padding-top: 0px;
      padding-bottom: 25px;
    }
  }

  .cart-drawer__free-shipping-message {
    font-size: 12px;
    color: {{ settings.free_shipping_progress_text_color }};
    margin-bottom: 12px;
  }

  .cart-drawer__free-shipping-progress-bar {
    flex: 1;
    height: 1px;
    background: {{ settings.free_shipping_progress_bg_color }};
    border-radius: 3px;
    overflow: hidden;
    position: relative;
  }

  .progress-fill {
    height: 100%;
    background: {{ settings.free_shipping_progress_bar_color }};
    border-radius: 3px;
    position: relative;
    animation: fillProgress 1.5s ease-out;
  }

  @keyframes fillProgress {
    from {
        width: 0%;
    }
    to {
        width: {{ free_shipping_percents }}%;
    }
  }
</style>
